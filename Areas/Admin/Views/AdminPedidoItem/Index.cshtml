@model IEnumerable<Projeto.Models.PedidoItem>

@{
    ViewData["Title"] = "Index";
}

<div class="container" style="min-height:80vh;"> 
<h1>Index</h1>

<p>
    <a asp-action="Create">Criar Novo</a>
</p>
<div class="table-responsive">
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Quantidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Preco)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Item)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pedido)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Quantidade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Preco)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Item.DescricaoCurta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pedido.Cep)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PedidoItemId">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.PedidoItemId">Detalhe</a> |
                <a asp-action="Delete" asp-route-id="@item.PedidoItemId">Apagar</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>
</div>
