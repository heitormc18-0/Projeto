@model Pedido
<div class="container d-flex justify-content-top flex-column" style="min-height: 65vh;">
    <div class="jumbotron">
        <h2>@ViewBag.CheckoutCompletoMensagem</h2>
    </div>
    <div class="card">
        <div class="card-body">
            <p>Cliente : <strong>@Model.Nome</strong>
            <p>Data do Pedido : <strong>@Model.PedidoEnviado</strong>
            <p>Número do Pedido : <strong>@Model.PedidoId</strong></p>
            <table class="table">
                <tr>
                    
                    <th>Quantidade</th>
                    <th>Lanche</th>
                    <th>Preço</th>
                </tr>
                     
            </table>
            <h4>Valor Total do Pedido:
                <strong>@(((decimal)ViewBag.TotalPedido).ToString("C2"))</strong>
            </h4>
        </div>
    </div>
</div>
<div class="form-group" style="text-align :center">
    <h2><a href="@ViewBag.UrlWhatsApp" target="_blank">Enviar Menssagem
a Frabrica</a> </h2>
    <h3>
        <a class="nav-link text-info" asp-controller="Home" asp-action="Index">Retornar</a>
    </h3>
</div>